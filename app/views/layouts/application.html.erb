<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <meta name="viewport" content="width-device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <% if user_signed_in? %>
       <li role="presentation"><%= link_to "Home", root_path %></li>
       <li role="presentation" class="pull-right dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          Signed in as: <strong><%= current_user.email %></strong><span class="caret"></span> 
        </a>
        <ul class="dropdown-menu">
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></br>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></br>
        </ul>
       </li>
      <% else %>
        <li role="presentation"><%= link_to "Home", root_path %></li>
        <li role="presentation" class="pull-right user-info"><%= link_to "Sign Up", new_user_registration_path %></li>
        <li role="presentation" class="pull-right user-info"><%= link_to "Sign In", new_user_session_path %></li>
      <% end %>
    </ul>
    
    <!--set up devise alerts-->
   <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>  
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>  
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>  
      <%= flash[:alert] %>
    </div>
  <% end %>


<%= yield %>
</div>

</body>
</html>
